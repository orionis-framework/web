<style>
  :root {
    --primary: #134675;
    --accent: #4cc9f0;
    --highlight: #f4c430;
  }
  .text-primary {
    color: var(--primary);
  }
  .text-accent {
    color: var(--accent);
  }
  .text-highlight {
    color: var(--highlight);
  }
  .group:hover .group-hover\:text-accent {
    color: var(--accent);
  }
  .group:hover .group-hover\:shadow-2xl {
