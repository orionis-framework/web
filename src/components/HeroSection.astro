<style>
  @keyframes logoPulse {
    0% {
      transform: scale(1) rotate(0deg);
      filter: brightness(1);
    }
    20% {
      transform: scale(1.08) rotate(-3deg);
      filter: brightness(1.1);
    }
    50% {
      transform: scale(1.12) rotate(3deg);
      filter: brightness(1.15);
    }
    80% {
      transform: scale(1.08) rotate(-3deg);
      filter: brightness(1.1);
    }
    100% {
      transform: scale(1) rotate(0deg);
      filter: brightness(1);
    }
  }
</style>
